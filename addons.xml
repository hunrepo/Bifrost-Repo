<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <addon id="repository.bifrost" name="BiFrost Repo" version="1.0.0" provider-name="double beretta">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="BiFrost Repo">
            <info compressed="false">http://raw.github.com/hunrepo/Bifrost-Repo/master/addons.xml</info>
            <checksum>http://raw.github.com/hunrepo/Bifrost-Repo/master/addons.xml.md5</checksum>
            <datadir zip="true">http://raw.github.com/hunrepo/Bifrost-Repo/master/zips/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en">Bifrost Repo</summary>
            <description lang="en"></description>
            <platform>all</platform>
    </extension>
	</addon>
    <addon id="plugin.video.visszanezo" name="VisszaNéző" version="1.0.1" provider-name="double beretta">
	<requires>
		<import addon="xbmc.python" version="2.1.0"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="addon.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.service" library="default.py" />
	<extension point="xbmc.addon.metadata">
		<summary lang="en">List of played history</summary>
		<summary lang="hu">Lejtászott előzmények listája</summary>
		<description lang="en">List of the last movies, episodes and music played, including streaming sources from any addon</description>
		<description lang="hu">Az utoljára játszott filmeket, epizódokat és zenéket, valamint a kiegészítők forrásait listázza ez a kiegészítő.</description>
		<disclaimer lang="en"></disclaimer>
		<disclaimer lang="hu"></disclaimer>
		<platform>all</platform>
		<license>GNU GENERAL PUBLIC LICENSE Version 3, 29 June 2007</license>
	</extension>
	</addon>
	<addon id="plugin.video.filmelozetesek" name="Filmelőzetesek" version="1.0.2" provider-name="double beretta">
	<requires>
		<import addon="xbmc.python" version="2.14.0"/>
		<import addon="script.module.addon.common" version="2.0.0"/>
		<import addon="plugin.video.youtube" version="5.0.0"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="hu">Magyar filmelőzetesek a Youtube-ról</summary>
		<summary lang="en">Hungarian trailers from Youtube</summary>
		<description lang="hu"></description>
		<platform>all</platform>
		<source>https://github.com/hunrepo/Bifrost-Repo/tree/master/plugin.video.filmelozetesek</source>
		<license>GPL v2.0</license>
	<assets>
		<icon>icon.png</icon>
		<fanart>fanart.png</fanart>
		<screenshot>resources/screenshot-01.jpg</screenshot>
		<screenshot>resources/screenshot-02.jpg</screenshot>
		<screenshot>resources/screenshot-03.jpg</screenshot>
	</assets>
	<news>- Cinenuovo, Pannonia Entertainment, Magyarhangya csatornak hozzaadva - Hibajavitas</news>
	</extension>
</addon>
</addons>